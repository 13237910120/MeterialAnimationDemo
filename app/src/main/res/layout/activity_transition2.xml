<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.boby.meterialanimationdemo.Transition2Activity"
    android:background="#9d7ed3e4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/square_red"
           android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/circle1"
            android:tint="@color/color2"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/activity_title"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Explode"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:padding="20dp"
            android:text="使用 xml 也可以创建 Translation，需要将 Translation 资源放在 res/anim 目录" />

        <Button
            android:id="@+id/exit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="exit"
            android:text="返回"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            />


    </LinearLayout>
</LinearLayout>
